<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Todo List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container mt-5">
      <h1>Todo List</h1>

      <form action="/add_todo" method="POST" class="mb-3">
        <input type="text" name="text" placeholder="Add a new todo" class="form-control" required>
        <button type="submit" class="btn btn-primary mt-2">Add Todo</button>
      </form>

      <ul class="list-group">
        <% todos.each do |todo| %>
          <li class="list-group-item">
            <%= todo["text"] %> - Created at: <%= todo["created_at"] %>
          </li>
        <% end %>
      </ul>
    </div>
  </body>
</html>
